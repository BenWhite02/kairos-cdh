# Development Theme Settings
VITE_DEFAULT_THEME=light
VITE_ENABLE_THEME_CREATOR=true
VITE_ENABLE_CUSTOM_THEMES=true
VITE_ENABLE_TENANT_THEMES=true
VITE_THEME_TRANSITION_DURATION=200

# Development Features (all enabled for testing)
VITE_ENABLE_BETA_FEATURES=true
