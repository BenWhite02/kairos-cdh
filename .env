VITE_ENABLE_EXPERIMENTS=true
VITE_ENABLE_EXPERIMENTAL_FEATURES=true
VITE_ENABLE_AI_INSIGHTS=true
VITE_ENABLE_PREDICTIVE_ANALYTICS=true

# Development Security (relaxed for dev)
