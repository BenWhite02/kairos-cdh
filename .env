# =============================================================================
# File: kairos/.env
# üéØ Base Environment Variables for Kairos Frontend
# These are the default values that apply across all environments
# Enhanced to match your established format and include all configurations
# =============================================================================

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
VITE_APP_NAME=Kairos
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=development
VITE_APP_DESCRIPTION="The Perfect Moment Delivery Interface"
VITE_BUILD_TIME=2024-07-06T10:00:00Z
VITE_COMMIT_HASH=dev-build

# Development vs Production flags
VITE_IS_DEVELOPMENT=true
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_DEVTOOLS=true

# =============================================================================
# HADES BACKEND API CONFIGURATION  
# =============================================================================

# Primary API Base URL (REST endpoints)
VITE_API_BASE_URL=http://localhost:8080
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# GraphQL Configuration
VITE_GRAPHQL_URL=http://localhost:8080/graphql
VITE_GRAPHQL_WS_URL=ws://localhost:8080/graphql/websocket
VITE_ENABLE_GRAPHQL_PLAYGROUND=true

# WebSocket Configuration (for real-time subscriptions)
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=5000

# =============================================================================
# MULTI-TENANT CONFIGURATION
# =============================================================================

# Default tenant for development
VITE_DEFAULT_TENANT_ID=dev-tenant-001
VITE_DEFAULT_WORKSPACE_ID=workspace-001

# Tenant resolution strategy: 'subdomain' | 'header' | 'path'
VITE_TENANT_STRATEGY=header
VITE_TENANT_HEADER=X-Tenant-ID
VITE_WORKSPACE_HEADER=X-Workspace-ID

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
VITE_AUTH_TOKEN_KEY=kairos-auth-token
VITE_AUTH_REFRESH_TOKEN_KEY=kairos-refresh-token
VITE_AUTH_TOKEN_EXPIRY_BUFFER=300000
VITE_AUTH_ENABLE_REMEMBER_ME=true
VITE_AUTH_SESSION_TIMEOUT=86400000
VITE_AUTH_MAX_LOGIN_ATTEMPTS=5
VITE_AUTH_LOCKOUT_DURATION=900000

# API Authentication
VITE_API_KEY_HEADER=X-API-Key

# Session Management
VITE_SESSION_TIMEOUT=3600000 # 1 hour in milliseconds
VITE_IDLE_TIMEOUT=1800000    # 30 minutes

# Security Configuration
VITE_SECURITY_ENABLE_CSP=true
VITE_SECURITY_ENABLE_HTTPS=false
VITE_SECURITY_ENABLE_CORS=true
VITE_SECURITY_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
VITE_SECURITY_MAX_FILE_SIZE=10485760
VITE_SECURITY_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/csv,application/json
VITE_SECURITY_ENABLE_XSS_PROTECTION=true

# =============================================================================
# THEME SYSTEM CONFIGURATION
# =============================================================================

# Default theme settings
VITE_DEFAULT_THEME=light
VITE_ENABLE_CUSTOM_THEMES=true
VITE_ENABLE_TENANT_THEMES=true
VITE_THEME_CACHE_TTL=3600000
VITE_THEME_TRANSITION_DURATION=200
VITE_THEME_API_URL=http://localhost:8080/api/v1/themes
VITE_THEME_ASSETS_PATH=/themes

# Theme system advanced settings
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_THEME_SWITCHING=true
VITE_THEME_STORAGE_KEY=kairos_theme_preference

# Theme presets available to users
VITE_AVAILABLE_THEMES=light,dark,kairos-blue,moment-purple,enterprise

# Custom brand colors (hex values)
VITE_BRAND_PRIMARY=#3b82f6
VITE_BRAND_SECONDARY=#eab308
VITE_BRAND_ACCENT=#a855f7

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================

# Basic Analytics
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_TRACKING_ID=
VITE_ANALYTICS_DEVICE_TRACKING=true
VITE_ANALYTICS_LOCATION_TRACKING=false
VITE_ANALYTICS_PERFORMANCE_TRACKING=true
VITE_ANALYTICS_SAMPLE_RATE=100
VITE_ANALYTICS_BATCH_SIZE=10
VITE_ANALYTICS_FLUSH_INTERVAL=30000

# Real-time analytics dashboard
VITE_ENABLE_REAL_TIME_ANALYTICS=true
VITE_ANALYTICS_REFRESH_INTERVAL=30000 # 30 seconds
VITE_DASHBOARD_AUTO_REFRESH=true

# Chart and visualization settings
VITE_DEFAULT_CHART_THEME=kairos
VITE_ENABLE_CHART_ANIMATIONS=true
VITE_CHART_UPDATE_ANIMATION_DURATION=750

# Data retention for client-side caching
VITE_ANALYTICS_CACHE_TTL=300000 # 5 minutes
VITE_DASHBOARD_DATA_POINTS=100  # Max data points in memory

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core Features
VITE_ENABLE_THEME_CREATOR=true
VITE_ENABLE_ADVANCED_ANALYTICS=false
VITE_ENABLE_EXPERIMENTS=false
VITE_ENABLE_REALTIME_UPDATES=true
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_BETA_FEATURES=false

# Experimental Features
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# Component Features
VITE_ENABLE_DRAG_AND_DROP=true
VITE_ENABLE_KEYBOARD_SHORTCUTS=true

# Advanced Analytics Features
VITE_ENABLE_PREDICTIVE_ANALYTICS=false
VITE_ENABLE_AI_INSIGHTS=false

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================

# API Caching
VITE_ENABLE_API_CACHE=true
VITE_API_CACHE_TTL=300000 # 5 minutes

# Component lazy loading
VITE_ENABLE_LAZY_LOADING=true
VITE_CHUNK_SIZE_WARNING_LIMIT=500

# Image optimization
VITE_ENABLE_IMAGE_OPTIMIZATION=true
VITE_IMAGE_QUALITY=85

# Cache Configuration
VITE_CACHE_ENABLE_SERVICE_WORKER=false
VITE_CACHE_STRATEGY=network-first
VITE_CACHE_MAX_SIZE=52428800
VITE_CACHE_DEFAULT_TTL=3600000
VITE_CACHE_ENABLE_OFFLINE_INDICATOR=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# React Query Devtools
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Apollo Client Devtools
VITE_ENABLE_APOLLO_DEVTOOLS=true

# Storybook Configuration
VITE_STORYBOOK_PORT=6006
VITE_ENABLE_STORYBOOK_A11Y=true

# Hot Module Replacement
VITE_HMR_PORT=3001
VITE_HMR_HOST=localhost

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Error Reporting
VITE_ENABLE_ERROR_REPORTING=true
VITE_ERROR_REPORTING_ENDPOINT=/api/v1/errors

# Analytics Tracking
VITE_ENABLE_USER_ANALYTICS=false
VITE_ANALYTICS_ENDPOINT=/api/v1/analytics/events

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# Console Logging Levels
VITE_LOG_LEVEL=debug # debug | info | warn | error
VITE_ENABLE_CONSOLE_LOGS=true

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Webhook URLs (for development testing)
VITE_WEBHOOK_TEST_URL=https://webhook.site/your-unique-url

# External API integrations (if any)
VITE_EXTERNAL_API_TIMEOUT=15000

# CDN Configuration
VITE_CDN_BASE_URL=https://cdn.kairos.dev
VITE_ENABLE_CDN=false

# =============================================================================
