# File: .env.example
# ðŸŽ¨ KAIROS Frontend Environment Configuration
# Copy this file to .env and fill in your values
# All environment variables for Kairos React + Vite Frontend

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
VITE_APP_NAME=Kairos
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="The Perfect Moment Delivery Interface"
VITE_NODE_ENV=development

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
# Hades Backend API URL
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# WebSocket Configuration for Real-time Updates
VITE_WS_URL=ws://localhost:8080/ws
VITE_WS_RECONNECT_INTERVAL=5000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
VITE_JWT_STORAGE_KEY=kairos_auth_token
VITE_REFRESH_TOKEN_KEY=kairos_refresh_token
VITE_TOKEN_EXPIRY_BUFFER=300000
VITE_SESSION_TIMEOUT=3600000

# OAuth Configuration (if needed)
VITE_OAUTH_CLIENT_ID=your-oauth-client-id
VITE_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# =============================================================================
# THEME SYSTEM CONFIGURATION
# =============================================================================
# Theme System Settings
VITE_THEME_STORAGE_KEY=kairos_selected_theme
VITE_THEME_CUSTOM_STORAGE_KEY=kairos_custom_themes
VITE_THEME_TRANSITION_DURATION=200
VITE_THEME_CACHE_DURATION=3600000

# Theme API Endpoints
VITE_THEME_API_ENDPOINT=/themes
VITE_CUSTOM_CSS_MAX_SIZE=51200
VITE_THEME_PREVIEW_ENABLED=true

# Default Theme Settings
VITE_DEFAULT_THEME=light
VITE_SYSTEM_THEME_ENABLED=true
VITE_CUSTOM_THEMES_ENABLED=true
VITE_THEME_CREATOR_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Component Features
VITE_FEATURE_STORYBOOK=true
VITE_FEATURE_DEV_TOOLS=true
VITE_FEATURE_ERROR_BOUNDARY=true
VITE_FEATURE_ANALYTICS=false

# EligibilityAtoms Features
VITE_FEATURE_ATOM_BUILDER=true
VITE_FEATURE_ATOM_PREVIEW=true
VITE_FEATURE_ATOM_TESTING=true

# Moment Management Features
VITE_FEATURE_MOMENT_TEMPLATES=true
VITE_FEATURE_MOMENT_VERSIONING=true
VITE_FEATURE_MOMENT_ANALYTICS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development Server
VITE_HOST=localhost
VITE_PORT=3000
VITE_OPEN=true
VITE_CORS=true

# Hot Module Replacement
VITE_HMR_ENABLED=true
VITE_HMR_PORT=24678

# Source Maps
VITE_SOURCEMAP=true
VITE_CSS_SOURCEMAP=true

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Build Settings
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
VITE_BUILD_TARGET=es2020
VITE_BUILD_OUTDIR=dist

# Asset Configuration
VITE_ASSET_INLINE_LIMIT=4096
VITE_ASSET_URL_PREFIX=/assets/

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Error Reporting
VITE_SENTRY_DSN=your-sentry-dsn
VITE_SENTRY_ENVIRONMENT=development

# Analytics
VITE_GA_TRACKING_ID=your-ga-tracking-id
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Performance Monitoring
VITE_WEB_VITALS_ENABLED=true
VITE_PERFORMANCE_OBSERVER_ENABLED=true

# =============================================================================
# CONTENT & ASSETS
# =============================================================================
# CDN Configuration
VITE_CDN_BASE_URL=https://cdn.kairos.app
VITE_STATIC_ASSETS_URL=https://static.kairos.app

# Image Configuration
VITE_IMAGE_OPTIMIZATION=true
VITE_MAX_IMAGE_SIZE=5242880
VITE_SUPPORTED_IMAGE_FORMATS=jpeg,jpg,png,webp,svg

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Maps
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-key
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Payment Processing
VITE_STRIPE_PUBLISHABLE_KEY=your-stripe-key

# Email Templates
VITE_EMAILJS_SERVICE_ID=your-emailjs-service
VITE_EMAILJS_TEMPLATE_ID=your-emailjs-template
VITE_EMAILJS_PUBLIC_KEY=your-emailjs-key

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
# Browser Cache
VITE_CACHE_STATIC_ASSETS=true
VITE_CACHE_DURATION=86400000

# Service Worker
VITE_SW_ENABLED=false
VITE_SW_CACHE_NAME=kairos-cache-v1

# =============================================================================
# DEBUGGING & TESTING
# =============================================================================
# Debug Settings
VITE_DEBUG_ENABLED=true
VITE_CONSOLE_LOGS=true
VITE_NETWORK_LOGS=false

# Testing
VITE_TEST_API_MOCK=false
VITE_TEST_DATA_ENABLED=true

# Storybook
VITE_STORYBOOK_ENABLED=true
VITE_STORYBOOK_PORT=6006

# =============================================================================
# ACCESSIBILITY & INTERNATIONALIZATION
# =============================================================================
# Accessibility
VITE_A11Y_ENABLED=true
VITE_HIGH_CONTRAST_MODE=false
VITE_REDUCED_MOTION_RESPECT=true

# Internationalization
VITE_I18N_ENABLED=true
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr,de

# =============================================================================
# SECURITY HEADERS
# =============================================================================
VITE_CSP_ENABLED=true
VITE_HSTS_ENABLED=true
VITE_X_FRAME_OPTIONS=DENY
VITE_X_CONTENT_TYPE_OPTIONS=nosniff