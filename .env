# =============================================================================
# File: kairos/.env
# Base environment variables for Kairos Frontend
# These are the default values that apply across all environments
# =============================================================================

# Application Configuration
VITE_APP_NAME=Kairos
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:8080
VITE_GRAPHQL_URL=http://localhost:8080/graphql
VITE_GRAPHQL_WS_URL=ws://localhost:8080/graphql/websocket
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_CUSTOM_THEMES=true
VITE_ENABLE_TENANT_THEMES=true
VITE_THEME_CACHE_TTL=3600000
VITE_THEME_TRANSITION_DURATION=200
VITE_THEME_API_URL=http://localhost:8080/api/v1/themes
VITE_THEME_ASSETS_PATH=/themes

# Authentication Configuration
VITE_AUTH_TOKEN_KEY=kairos-auth-token
VITE_AUTH_REFRESH_TOKEN_KEY=kairos-refresh-token
VITE_AUTH_TOKEN_EXPIRY_BUFFER=300000
VITE_AUTH_ENABLE_REMEMBER_ME=true
VITE_AUTH_SESSION_TIMEOUT=86400000
VITE_AUTH_MAX_LOGIN_ATTEMPTS=5
VITE_AUTH_LOCKOUT_DURATION=900000

# Analytics Configuration
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_TRACKING_ID=
VITE_ANALYTICS_DEVICE_TRACKING=true
VITE_ANALYTICS_LOCATION_TRACKING=false
VITE_ANALYTICS_PERFORMANCE_TRACKING=true
VITE_ANALYTICS_SAMPLE_RATE=100
VITE_ANALYTICS_BATCH_SIZE=10
VITE_ANALYTICS_FLUSH_INTERVAL=30000

# Feature Flags
VITE_ENABLE_THEME_CREATOR=true
VITE_ENABLE_ADVANCED_ANALYTICS=false
VITE_ENABLE_EXPERIMENTS=false
VITE_ENABLE_REALTIME_UPDATES=true
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_BETA_FEATURES=false
VITE_ENABLE_DEBUG_MODE=false

# Security Configuration
VITE_SECURITY_ENABLE_CSP=true
VITE_SECURITY_ENABLE_HTTPS=false
VITE_SECURITY_ENABLE_CORS=true
VITE_SECURITY_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
VITE_SECURITY_MAX_FILE_SIZE=10485760
VITE_SECURITY_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/csv,application/json
VITE_SECURITY_ENABLE_XSS_PROTECTION=true

# Cache Configuration
VITE_CACHE_ENABLE_SERVICE_WORKER=false
VITE_CACHE_STRATEGY=network-first
VITE_CACHE_MAX_SIZE=52428800
VITE_CACHE_DEFAULT_TTL=3600000
VITE_CACHE_ENABLE_OFFLINE_INDICATOR=true

# =============================================================================
# File: kairos/.env.local
# Local development overrides - gitignored for personal customization
# Copy from .env.local.example and customize for your local setup
# =============================================================================

# Local Development Overrides
VITE_NODE_ENV=development
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_BETA_FEATURES=true

# Local API Configuration (if using different ports)
# VITE_API_BASE_URL=http://localhost:9080
# VITE_GRAPHQL_URL=http://localhost:9080/graphql

# Local Theme Development
VITE_ENABLE_THEME_CREATOR=true
VITE_THEME_TRANSITION_DURATION=0

# Local Analytics (disabled in development)
VITE_ANALYTICS_ENABLED=false

# Developer-specific settings
VITE_ENABLE_ADVANCED_ANALYTICS=true
VITE_ENABLE_EXPERIMENTS=true

# =============================================================================
# File: kairos/.env.development
# Development environment configuration
# Used when NODE_ENV=development
# =============================================================================

# Development Environment
VITE_NODE_ENV=development

# Development API URLs
VITE_API_BASE_URL=http://localhost:8080
VITE_GRAPHQL_URL=http://localhost:8080/graphql
VITE_GRAPHQL_WS_URL=ws://localhost:8080/graphql/websocket

# Development Theme Settings
VITE_DEFAULT_THEME=light
VITE_ENABLE_THEME_CREATOR=true
VITE_ENABLE_CUSTOM_THEMES=true
VITE_ENABLE_TENANT_THEMES=true

# Development Features
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_BETA_FEATURES=true
VITE_ENABLE_ADVANCED_ANALYTICS=true
VITE_ENABLE_EXPERIMENTS=true

# Development Security (relaxed for dev)
VITE_SECURITY_ENABLE_HTTPS=false
VITE_SECURITY_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Development Analytics
VITE_ANALYTICS_ENABLED=false

# =============================================================================
# File: kairos/.env.staging
# Staging environment configuration
# Used for pre-production testing
# =============================================================================

# Staging Environment
VITE_NODE_ENV=staging

# Staging API URLs
VITE_API_BASE_URL=https://api-staging.kairos.com
VITE_GRAPHQL_URL=https://api-staging.kairos.com/graphql
VITE_GRAPHQL_WS_URL=wss://api-staging.kairos.com/graphql/websocket

# Staging Theme Settings
VITE_DEFAULT_THEME=light
VITE_ENABLE_THEME_CREATOR=true
VITE_ENABLE_CUSTOM_THEMES=true
VITE_ENABLE_TENANT_THEMES=true

# Staging Features (similar to production but with some dev features)
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_BETA_FEATURES=true
VITE_ENABLE_ADVANCED_ANALYTICS=true
VITE_ENABLE_EXPERIMENTS=true
VITE_ENABLE_REALTIME_UPDATES=true

# Staging Security
VITE_SECURITY_ENABLE_HTTPS=true
VITE_SECURITY_ENABLE_CSP=true
VITE_SECURITY_ALLOWED_ORIGINS=https://staging.kairos.com,https://app-staging.kairos.com

# Staging Analytics
VITE_ANALYTICS_ENABLED=true
VITE_ANALYTICS_TRACKING_ID=G-XXXXXXXXXX-STAGING

# =============================================================================
# File: kairos/.env.production
# Production environment configuration
# Used for live production deployment
# =============================================================================

# Production Environment
VITE_NODE_ENV=production

# Production API URLs
VITE_API_BASE_URL=https://api.kairos.com
VITE_GRAPHQL_URL=https://api.kairos.com/graphql
VITE_GRAPHQL_WS_URL=wss://api.kairos.com/graphql/websocket

# Production Theme Settings
VITE_DEFAULT_THEME=light
VITE_ENABLE_THEME_CREATOR=true
VITE_ENABLE_CUSTOM_THEMES=true
VITE_ENABLE_TENANT_THEMES=true
VITE_THEME_CACHE_TTL=7200000

# Production Features (stable features only)
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_BETA_FEATURES=false
VITE_ENABLE_ADVANCED_ANALYTICS=true
VITE_ENABLE_EXPERIMENTS=false
VITE_ENABLE_REALTIME_UPDATES=true
VITE_ENABLE_OFFLINE_MODE=true

# Production Security (strict)
VITE_SECURITY_ENABLE_HTTPS=true
VITE_SECURITY_ENABLE_CSP=true
VITE_SECURITY_ENABLE_XSS_PROTECTION=true
VITE_SECURITY_ALLOWED_ORIGINS=https://kairos.com,https://app.kairos.com
VITE_SECURITY_MAX_FILE_SIZE=5242880

# Production Analytics
VITE_ANALYTICS_ENABLED=true
VITE_ANALYTICS_TRACKING_ID=G-XXXXXXXXXX
VITE_ANALYTICS_SAMPLE_RATE=10

# Production Cache Settings
VITE_CACHE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_STRATEGY=stale-while-revalidate
VITE_CACHE_DEFAULT_TTL=7200000

